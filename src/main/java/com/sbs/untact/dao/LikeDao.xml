<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sbs.untact.dao.LikeDao">
	
	<select id="totleCountLikeByArticle" resultType="like">
		SELECT COUNT(*)
		FROM `like`
		WHERE relId = #{id}
	</select>

	<select id="getLikeByMemberId" resultType="like">
		SELECT *
		FROM `like`
		WHERE memberId = #{id}
	</select>

	<select id="getLikeTotleCountByArticle" resultType="int">
		SELECT COUNT(*)
		FROM `like`
		WHERE relId = #{id}
	</select>
	
	<select id="getLikeByArticle" resultType="like">
		SELECT *
		FROM `like`
		WHERE relId = #{id}
	</select>

	<select id="getLike" resultType="int">
		SELECT *
		FROM `like`
		WHERE id = #{id}
	</select>

	<select id="getLikeTotleCount" resultType="int">
		SELECT count(*)
		FROM `like`
	</select>
	
	<insert id="doLike" useGeneratedKeys="true" keyProperty="id">
		INSERT INTO `like`
		SET regDate = NOW(),
		updateDate = NOW(),
		relTypeCode = #{relTypeCode},
		relId = #{relId},
		memberId = #{memberId},
		`like` = #{like}
	</insert>

	<delete id="deleteLike">
		DELETE FROM `like`
		WHERE id = #{id}
	</delete>

</mapper>